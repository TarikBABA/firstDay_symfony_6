{% extends "template.html.twig" %}
{% block body %}
	<h3>{{"now" | date('d/m/Y')}}</h3>
	<h1>
		Liste des notes</h1>
	<table class="table">
		{% for note in notes %}
			<tr>
				<td>
					{{note}}
				</td>
			</tr>

		{% endfor %}
	</table>

	<div class="alert alert-info">
		<p>Nombre de notes :
			{{ notes | length }}</p>
		<p>Note min :
			{{ min(notes)}}</p>
		<p>Note max :
			{{ max(notes)}}</p>
	</div>


{% endblock %}
